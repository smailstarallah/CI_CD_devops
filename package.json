{
    "name": "eduplatform-testing",
    "version": "1.0.0",
    "description": "Package de test pour EduPlatform",
    "scripts": {
        "test": "npm run test:html && npm run test:css && npm run test:js && npm run test:accessibility",
        "test:html": "html-validate *.html",
        "test:css": "stylelint 'css/**/*.css'",
        "test:js": "eslint 'js/**/*.js'",
        "test:accessibility": "pa11y http://localhost:8000",
        "test:performance": "lighthouse http://localhost:8000 --output json --output-path lighthouse-report.json",
        "serve": "http-server -p 8000",
        "build": "npm run test && echo 'Build completed successfully'",
        "deploy:dev": "echo 'Deploying to development environment'",
        "deploy:prod": "echo 'Deploying to production environment'"
    },
    "devDependencies": {
        "html-validate": "^8.0.0",
        "stylelint": "^15.0.0",
        "stylelint-config-standard": "^34.0.0",
        "eslint": "^8.0.0",
        "pa11y": "^6.0.0",
        "lighthouse": "^11.0.0",
        "http-server": "^14.0.0"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": "eslint:recommended",
        "rules": {
            "no-console": "warn",
            "no-unused-vars": "error",
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ]
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "color-no-invalid-hex": true,
            "font-family-no-duplicate-names": true,
            "no-duplicate-selectors": true,
            "property-no-unknown": true
        }
    },
    "htmlValidate": {
        "extends": [
            "html-validate:recommended"
        ],
        "rules": {
            "void-content": "error",
            "void-style": "error",
            "no-unknown-elements": "error",
            "require-sri": "off"
        }
    },
    "pa11y": {
        "standard": "WCAG2AA",
        "ignore": [
            "WCAG2AA.Principle1.Guideline1_4.1_4_3.G18.Fail"
        ],
        "timeout": 30000,
        "wait": 2000
    }
}